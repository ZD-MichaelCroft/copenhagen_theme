                    "type": "text",
                    "label": "Link 1 Label",
                    "value": "McDonald's USA"
                },
                {
                    "identifier": "network_link_1_url",
                    "type": "text",
                    "label": "Link 1 URL",
                    "value": "https://www.mcdonalds.com/us/en-us.html"
                },
                {
                    "identifier": "network_link_2_label",
                    "type": "text",
                    "label": "Link 2 Label",
                    "value": "Mobile App"
                },
                {
                    "identifier": "network_link_2_url",
                    "type": "text",
                    "label": "Link 2 URL",
                    "value": "https://www.mcdonalds.com/us/en-us/mcdonalds-app.html"
                },
                {
                    "identifier": "network_link_3_label",
                    "type": "text",
                    "label": "Link 3 Label",
                    "value": "Careers"
                },
                {
                    "identifier": "network_link_3_url",
                    "type": "text",
                    "label": "Link 3 URL",
                    "value": "https://careers.mcdonalds.com/"
                },
                {
                    "identifier": "network_link_4_label",
                    "type": "text",
                    "label": "Link 4 Label",
                    "value": "Deals"
                },
                {
                    "identifier": "network_link_4_url",
                    "type": "text",
                    "label": "Link 4 URL",
                    "value": "https://www.mcdonalds.com/us/en-us/deals.html"
                },
                {
                    "identifier": "network_link_5_label",
                    "type": "text",
                    "label": "Link 5 Label",
                    "value": "Nutrition Calculator"
                },
                {
                    "identifier": "network_link_5_url",
                    "type": "text",
                    "label": "Link 5 URL",
                    "value": "https://www.mcdonalds.com/us/en-us/about-our-food/nutrition-calculator.html"
                },
                {
                    "identifier": "network_link_6_label",
                    "type": "text",
                    "label": "Link 6 Label",
                    "value": "Corporate"
                },
                {
                    "identifier": "network_link_6_url",
