{
    "name": "McDonald's Help Center (Copenhagen Base)",
    "author": "Your Team",
    "version": "1.0.0",
    "api_version": 4,
    "default_locale": "en-us",
    "settings": [
        {
            "label": "Brand",
            "variables": [
                {
                    "identifier": "logo",
                    "type": "image",
                    "label": "Logo"
                },
                {
                    "identifier": "favicon",
                    "type": "image",
                    "label": "Favicon"
                },
                {
                    "identifier": "hero_image",
                    "type": "image",
                    "label": "Hero Image"
                },
                {
                    "identifier": "arches_watermark",
                    "type": "image",
                    "label": "Arches Watermark (SVG/PNG, optional)"
                },
                {
                    "identifier": "use_arches_watermark",
                    "type": "checkbox",
                    "label": "Show arches watermark in hero",
                    "value": true
                }
            ]
        },
        {
            "label": "Colors",
            "variables": [
                {
                    "identifier": "color_brand_red",
                    "type": "color",
                    "label": "Brand Red",
                    "value": "#DA291C"
                },
                {
                    "identifier": "color_brand_yellow",
                    "type": "color",
                    "label": "Brand Yellow",
                    "value": "#FFC72C"
                },
                {
                    "identifier": "color_text_primary",
                    "type": "color",
                    "label": "Primary Text",
                    "value": "#27251F"
                },
                {
                    "identifier": "color_surface",
                    "type": "color",
                    "label": "Surface (Background)",
                    "value": "#FFFFFF"
                },
                {
                    "identifier": "color_surface_alt",
                    "type": "color",
                    "label": "Surface Alt (Cards/Stripes)",
                    "value": "#FFF8E1"
                },
                {
                    "identifier": "color_link",
                    "type": "color",
                    "label": "Link Color",
                    "value": "#DA291C"
                }
            ]
        },
        {
            "label": "Typography",
            "variables": [
                {
                    "identifier": "font_family_custom_url",
                    "type": "text",
                    "label": "Custom Brand Webfont URL (optional)",
                    "value": ""
                },
                {
                    "identifier": "font_family_stack",
                    "type": "text",
                    "label": "Font Stack",
                    "value": "'Speedee Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Helvetica Neue', Arial, sans-serif"
                }
            ]
        },
        {
            "label": "Layout",
            "variables": [
                {
                    "identifier": "sticky_header",
                    "type": "checkbox",
                    "label": "Sticky header on scroll",
                    "value": true
                },
                {
                    "identifier": "rounded_cards",
                    "type": "checkbox",
                    "label": "Rounded cards",
                    "value": true
                }
            ]
        },
        {
            "label": "Knowledge Base & Community",
            "variables": [
                {
                    "identifier": "scoped_kb_search",
                    "type": "checkbox",
                    "label": "Scope KB Search to current category/section",
                    "value": false
                },
                {
                    "identifier": "scoped_community_search",
                    "type": "checkbox",
                    "label": "Scope Community Search to current topic",
                    "value": false
                },
                {
                    "identifier": "show_follow_section",
                    "type": "checkbox",
                    "label": "Show Follow button on section page",
                    "value": true
                },
                {
                    "identifier": "show_follow_topic",
                    "type": "checkbox",
                    "label": "Show Follow button on community topic page",
                    "value": true
                },
                {
                    "identifier": "show_follow_post",
                    "type": "checkbox",
                    "label": "Show Follow button on community post page",
                    "value": true
                },
                {
                    "identifier": "show_post_sharing",
                    "type": "checkbox",
                    "label": "Show share controls on community posts",
                    "value": true
                }
            ]
        },
        {
            "label": "Article Settings",
            "variables": [
                {
                    "identifier": "show_articles_in_section",
                    "type": "checkbox",
                    "label": "Show article list in section sidebar",
                    "value": true
                },
                {
                    "identifier": "show_article_author",
                    "type": "checkbox",
                    "label": "Show article author",
                    "value": true
                },
                {
                    "identifier": "show_follow_article",
                    "type": "checkbox",
                    "label": "Show Follow button on article page",
                    "value": true
                },
                {
                    "identifier": "show_article_sharing",
                    "type": "checkbox",
                    "label": "Show share controls on articles",
                    "value": true
                },
                {
                    "identifier": "show_article_comments",
                    "type": "checkbox",
                    "label": "Show article comments",
                    "value": true
                },
                {
                    "identifier": "show_recently_viewed_articles",
                    "type": "checkbox",
                    "label": "Show Recently Viewed",
                    "value": true
                },
                {
                    "identifier": "show_related_articles",
                    "type": "checkbox",
                    "label": "Show Related Articles",
                    "value": true
                }
            ]
        },
        {
            "label": "Requests",
            "variables": [
                {
                    "identifier": "request_list_beta",
                    "type": "checkbox",
                    "label": "Use requests list beta",
                    "value": false
                }
            ]
        },
        {
            "label": "McDonald's Network Links",
            "variables": [
                {
                    "identifier": "show_network_links",
                    "type": "checkbox",
                    "label": "Show Network Links section",
                    "value": true
                },
                {
