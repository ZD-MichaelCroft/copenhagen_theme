<section class="hero" role="region" aria-label="{{t 'search'}}">
  {{#if settings.hero_image}}
    <div class="hero-media" aria-hidden="true" style="position:absolute; inset:0; z-index:-1; background:
      linear-gradient(0deg, rgba(255,255,255,0.94), rgba(255,255,255,0.94)),
      url('{{settings.hero_image}}') center/cover no-repeat;">
      <div style="font-size:12px;color:#999">Hero URL: {{settings.hero_image}}</div>

    </div>
  {{/if}}
<div style="font-size:12px;color:#999">Hero URL: {{settings.hero_image}}</div>

  {{#if settings.use_arches_watermark}}
    {{#if settings.arches_watermark}}
      <div class="hero__arches" aria-hidden="true" style="
        position:absolute; inset:0; z-index:-1;
        background-image:url('{{settings.arches_watermark}}');
        background-repeat:no-repeat;
        background-position:right -80px bottom -60px;
        background-size:420px auto; opacity:0.08; pointer-events:none;">
      </div>
    {{/if}}
  {{/if}}

  <div class="hero__inner">
    <h1 class="hero__title">{{help_center.name}}</h1>
    {{search}}
  </div>
</section>

<main class="container">
  {{#if settings.show_network_links}}
  <section class="network" aria-label="McDonald's network links">
    <h2 class="section-title">McDonald's Network</h2>
    <ul class="network-links">
      {{#if settings.network_link_1_label}}{{#if settings.network_link_1_url}}
      <li><a class="network-link" href="{{settings.network_link_1_url}}">{{settings.network_link_1_label}}</a></li>
      {{/if}}{{/if}}
      {{#if settings.network_link_2_label}}{{#if settings.network_link_2_url}}
      <li><a class="network-link" href="{{settings.network_link_2_url}}">{{settings.network_link_2_label}}</a></li>
      {{/if}}{{/if}}
      {{#if settings.network_link_3_label}}{{#if settings.network_link_3_url}}
      <li><a class="network-link" href="{{settings.network_link_3_url}}">{{settings.network_link_3_label}}</a></li>
      {{/if}}{{/if}}
      {{#if settings.network_link_4_label}}{{#if settings.network_link_4_url}}
      <li><a class="network-link" href="{{settings.network_link_4_url}}">{{settings.network_link_4_label}}</a></li>
      {{/if}}{{/if}}
      {{#if settings.network_link_5_label}}{{#if settings.network_link_5_url}}
      <li><a class="network-link" href="{{settings.network_link_5_url}}">{{settings.network_link_5_label}}</a></li>
      {{/if}}{{/if}}
      {{#if settings.network_link_6_label}}{{#if settings.network_link_6_url}}
      <li><a class="network-link" href="{{settings.network_link_6_url}}">{{settings.network_link_6_label}}</a></li>
      {{/if}}{{/if}}
    </ul>
  </section>
  {{/if}}

  {{#if categories}}
    <ul class="category-list blocks">
      {{#each categories}}
        <li class="blocks-item category">
          <a href="{{url}}">
            <h2 class="blocks-item-title">{{name}}</h2>
            <p class="blocks-item-description">{{excerpt description}}</p>
          </a>
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if promoted_articles}}
    <section class="promoted-articles">
      <h2 class="section-title">{{t 'promoted_articles'}}</h2>
      <ul class="article-list">
        {{#each promoted_articles}}
          <li class="article-list-item">
            <a href="{{url}}">{{title}}</a>
          </li>
        {{/each}}
      </ul>
    </section>
  {{/if}}
</main>